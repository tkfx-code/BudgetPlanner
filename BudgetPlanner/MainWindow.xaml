<Window x:Class="BudgetPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetPlanner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="5">
        <TabControl Background="White">
            <TabItem Header="My Budget Planner">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <TextBlock Text="My Budget Planner" FontSize="22" Margin="10"/>

                        <TextBlock Text="{Binding BalanceDisplay}" Margin="10 0 0 3" Width="150" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="DarkRed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsPositiveBalance}" Value="True">
                                            <Setter Property="Foreground" Value="DarkGreen"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <StackPanel Orientation="Horizontal" Margin="10,5">
                            <TextBlock Text="Filter by Category:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox ItemsSource="{Binding CategoryFilters}" Width="150" 
                                SelectedItem="{Binding SelectedCategoryFilter}" />

                            <TextBlock Text="Date:" VerticalAlignment="Center" Margin="20 0 5 0"/>
                            <DatePicker SelectedDate="{Binding SelectedDate}" Width="150" VerticalAlignment="Center"/>
                            <Button Content="✕"
                                Command="{Binding ClearDateCommand}"
                                ToolTip="Clear"
                                Margin="5 0 0 0" Width="20" Height="20"
                                Background="Transparent" BorderBrush="DarkRed"/>
                        </StackPanel>

                        <DataGrid ItemsSource ="{Binding FilteredTransactions}"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            IsReadOnly="True"
                            GridLinesVisibility="Horizontal"
                            Background="White"
                            RowBackground="White"
                            AlternatingRowBackground="AliceBlue"
                            AlternationCount="2"
                            BorderBrush="#DDDDDD"
                            HorizontalGridLinesBrush="#EEEEEE"
                            Margin="10 10 10 30">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Height" Value="30"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F0F8FF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date"
                                    Binding="{Binding Date, StringFormat=\{0:yyyy-MM-dd\}}"
                                    Width="100"/>
                                <DataGridTextColumn Header="Category"
                                    Binding="{Binding CategoryName}"
                                    Width="*"/>
                                <DataGridTextColumn Header="Descriptions"
                                    Binding="{Binding Description}"
                                    Width="2*"/>
                                <DataGridTextColumn Header="Frequency"
                                    Binding="{Binding Recurrence}"
                                    Width="100"/>
                                <DataGridTemplateColumn Header="Amount" Width="120" SortMemberPath="Amount">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock FontWeight="Bold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="-"/>
                                                            <Setter Property="Foreground" Value="DarkRed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsIncome}" Value="True">
                                                                    <Setter Property="Text" Value="+"/>
                                                                    <Setter Property="Foreground" Value="DarkGreen"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="{Binding Amount, StringFormat={}{0:N2} kr}"
                                                        HorizontalAlignment="Right"
                                                        FontWeight="Bold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="DarkRed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsIncome}" Value="True">
                                                                    <Setter Property="Foreground" Value="DarkGreen"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Content="Add Transaction" 
            FontSize="14" FontWeight="Bold" Width="150" Height="30" Margin="5"
            Command="{Binding AddTransactionCommand}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Prognosis">
                <Grid Margin="10">
                    <StackPanel>
                        <TextBlock Text="Financial Prognosis" FontSize="22" Margin="0 0 0 10"/>
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                            <TextBlock Text="Select Year: " VerticalAlignment="Center"/>
                            <ComboBox ItemsSource="{Binding PrognosisYears}"
                                    SelectedItem="{Binding SelectedPrognosisYear}"
                                    Width="100" Height="25 " Margin="5 0 0 0"/>
                        </StackPanel>
                        <TextBlock Text="Est. Year Balance:" Foreground="Gray"/>
                        <TextBlock Text="{Binding YearlyPrognosisDisplay}" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
