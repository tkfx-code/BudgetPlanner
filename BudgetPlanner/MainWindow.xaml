<Window x:Class="BudgetPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetPlanner"
        mc:Ignorable="d"
        Title="Budget Planner Pro" Height="600" Width="900">

    <Grid Margin="5">
        <TabControl Background="White">

            <TabItem Header="My Budget Planner">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="My Budget Planner" Style="{StaticResource HeaderTitle}"/>
                        <TextBlock Text="Current Net Balance" FontSize="11" FontStyle="Italic" Margin="5,0,0,0" Foreground="Gray"/>
                        <TextBlock Text="{Binding BalanceDisplay}" Style="{StaticResource BalanceValue}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10">
                        <StackPanel Margin="0,0,15,0">
                            <TextBlock Text="Category" FontSize="10" Foreground="Gray"/>
                            <ComboBox ItemsSource="{Binding CategoryFilters}" 
                                      SelectedItem="{Binding SelectedCategoryFilter}" 
                                      Width="150" Height="30"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Date" FontSize="10" Foreground="Gray"/>
                            <StackPanel Orientation="Horizontal">
                                <DatePicker SelectedDate="{Binding SelectedDate}" Width="150" Height="30"/>
                                <Button Content="✕" Command="{Binding ClearDateCommand}" 
                                        Margin="5,0" Width="30" Height="30" 
                                        Background="Transparent" BorderBrush="DarkRed" Foreground="DarkRed"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <DataGrid x:Name="TransactionsGrid" 
                            Grid.Row="2" 
                            ItemsSource="{Binding FilteredTransactions}"
                            AutoGenerateColumns="False" 
                            CanUserAddRows="False" 
                            IsReadOnly="False"
                            CellEditEnding="DataGrid_CellEditEnding"
                            GridLinesVisibility="Horizontal" 
                            HorizontalGridLinesBrush="#EEEEEE"
                            Background="White" 
                            RowHeight="35">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Date" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Date, StringFormat=\{0:yyyy-MM-dd\}}"
                                        VerticalAlignment="Center" Margin="5"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <DatePicker SelectedDate="{Binding Date, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                    IsTodayHighlighted="True"
                                                    BorderThickness="0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Category" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding CategoryName}" VerticalAlignment="Center" Margin="5"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <ComboBox ItemsSource="{Binding DataContext.CategoryFilters, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                  SelectedItem="{Binding CategoryName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  IsEditable="False"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description, Mode=TwoWay}" Width="2*"/>

                            <DataGridTemplateColumn Header="Repeats" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Recurrence}" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Recurrence}" Value="OneTime">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>

                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <ComboBox SelectedItem="{Binding Recurrence, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  IsEditable="False">
                                            <ComboBoxItem Content="OneTime"/>
                                            <ComboBoxItem Content="Monthly"/>
                                            <ComboBoxItem Content="Yearly"/>
                                        </ComboBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Amount" Width="130">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock FontWeight="Bold" VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="- "/>
                                                        <Setter Property="Foreground" Value="DarkRed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsIncome, Mode=TwoWay}" Value="True">
                                                                <Setter Property="Text" Value="+ "/>
                                                                <Setter Property="Foreground" Value="DarkGreen"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Amount, Mode=TwoWay, StringFormat={}{0:N2} kr}" 
                                                       FontWeight="Bold" VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="DarkRed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsIncome, Mode=TwoWay}" Value="True">
                                                                <Setter Property="Foreground" Value="DarkGreen"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Amount, UpdateSourceTrigger=LostFocus, StringFormat={}{0:F2}}"
                                        VerticalContentAlignment="Center"
                                        HorizontalContentAlignment="Right"
                                        GotFocus="TextBox_GotFocus"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Delete" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Delete" 
                                                Width="60"
                                                Command="{Binding DataContext.DeleteTransactionCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent" 
                                                BorderBrush="DarkRed" 
                                                Foreground="DarkRed" 
                                                FontSize="10" 
                                                FontWeight="SemiBold"
                                                Padding="3,2"
                                                Cursor="Hand"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Grid.Row="3" Content="+ Add Transaction" 
                            Command="{Binding AddTransactionCommand}" 
                            Style="{StaticResource PrimaryButton}"
                            HorizontalAlignment="Left" Width="180" Height="40" Margin="0,15,0,0"/>
                </Grid>
            </TabItem>

            <TabItem Header="Prognosis">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Financial Outlook" Style="{StaticResource HeaderTitle}"/>

                    <Grid Grid.Row="1" Margin="0,10,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="Select Year" FontSize="11" Foreground="Gray" Margin="0,0,0,3"/>
                            <ComboBox ItemsSource="{Binding PrognosisYears}" 
                                      SelectedItem="{Binding SelectedPrognosisYear}" 
                                      Width="120" Height="30"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Select Month" FontSize="11" Foreground="Gray" Margin="0,0,0,3"/>
                            <ComboBox   ItemsSource="{Binding PrognosisMonths}"
                                        SelectedItem="{Binding SelectedPrognosisMonth}"
                                        Width="140" Height="30"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Grid.Row="2" VerticalAlignment="Top">
                        <Border Style="{StaticResource InfoCard}">
                            <StackPanel>
                                <TextBlock Text="Estimated Year End Result" FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="{Binding YearlyPrognosisDisplay}" Style="{StaticResource BalanceValue}"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource InfoCard}" Margin="0,15,0,0">
                            <StackPanel>
                                <TextBlock Text="Estimated Monthly Average" FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="{Binding MonthlyPrognosisDisplay}" Style="{StaticResource BalanceValue}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>