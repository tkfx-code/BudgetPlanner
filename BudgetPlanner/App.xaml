<Application x:Class="BudgetPlanner.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BudgetPlanner"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!--Ability to hide row with VAB/Sickness in prognosis if not applicable-->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!--Header Title Style-->
        <Style x:Key="HeaderTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <!--Info Card Style-->
        <Style x:Key="InfoCard" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Margin" Value="0 5 0 5"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>

        <!--Button Style-->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--Small Balance Style-->
        <Style x:Key="BalanceText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="DarkRed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsPositiveBalance}" Value="True">
                    <Setter Property="Foreground" Value="DarkGreen"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!--Big Balance Style Prognosis Tab-->    
        <Style x:Key="BalanceValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsPositiveBalance}" Value="True">
                    <Setter Property="Foreground" Value="DarkGreen"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsPositiveBalance}" Value="False">
                    <Setter Property="Foreground" Value="DarkRed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!--Data Grid Column Center Style-->
        <Style x:Key="DataGridColumnCenter" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!--Data Cell Grid Center Style-->
        <Style TargetType="DataGridCell">
            <Style.Setters>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Grid Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style.Setters>
        </Style>
    </Application.Resources>
</Application>
